<?php

namespace ChatBundle\Entity;

use Doctrine\ORM\Mapping as ORM;
use ChatBundle\Entity;
use Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity;

/**
 * @ORM\Entity
 * @ORM\Table(name="room_user")
 * @UniqueEntity(fields = "room_id")
 * @UniqueEntity(fields = "user_id")
 */
class RoomUser {

    /**
     * @ORM\Column(type="integer")
     * @ORM\Id
     * @ORM\GeneratedValue(strategy="AUTO")
     */
    protected $id;

    /**
     * @ORM\ManyToOne(targetEntity="Room")
     * @ORM\JoinColumn(name="room_id", referencedColumnName="id", nullable=false)
     */
    protected $room_id;

    /**
     * @ORM\ManyToOne(targetEntity="User")
     * @ORM\JoinColumn(name="user_id", referencedColumnName="id", nullable=false)
     */
    protected $user_id;


    /**
     * Get id
     *
     * @return integer 
     */
    public function getId()
    {
        return $this->id;
    }

    /**
     * Set room_id
     *
     * @param \ChatBundle\Entity\Room $roomId
     * @return RoomUser
     */
    public function setRoomId(\ChatBundle\Entity\Room $roomId)
    {
        $this->room_id = $roomId;

        return $this;
    }

    /**
     * Get room_id
     *
     * @return \ChatBundle\Entity\Room 
     */
    public function getRoomId()
    {
        return $this->room_id;
    }

    /**
     * Set user_id
     *
     * @param \ChatBundle\Entity\User $userId
     * @return RoomUser
     */
    public function setUserId(\ChatBundle\Entity\User $userId)
    {
        $this->user_id = $userId;

        return $this;
    }

    /**
     * Get user_id
     *
     * @return \ChatBundle\Entity\User 
     */
    public function getUserId()
    {
        return $this->user_id;
    }
}
